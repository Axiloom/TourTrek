<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorSecondaryLight"
    android:orientation="vertical">

    <EditText
        android:id="@+id/attraction_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Attraction Name"
        android:textColorHint="@color/colorAccent"
        android:textSize="40dp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorSecondaryLight"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/attraction_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:hint="Type of Attraction/Event"
        android:textColorHint="@color/colorAccent"
        android:inputType="time"
        app:backgroundTint="@color/colorPrimaryDark"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Location:"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:backgroundTint="@color/colorSecondaryLight"/>

    <EditText
        android:id="@+id/attraction_address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Address"
        android:textColorHint="@color/colorAccent"
        app:backgroundTint="@color/colorPrimaryDark"
        android:selectAllOnFocus="true"/>

    <EditText
        android:id="@+id/attraction_location_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:hint="City, State"
        android:textColorHint="@color/colorAccent"
        app:backgroundTint="@color/colorPrimaryDark"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Cost of Event:"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:backgroundTint="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/attraction_cost_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:hint="Cost in $"
        android:textColorHint="@color/colorAccent"
        android:inputType="numberDecimal"
        app:backgroundTint="@color/colorPrimaryDark"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Time of Attraction/Event:"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:backgroundTint="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/attraction_time_start_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="0.33"
            android:hint="Time Start"
            android:textColorHint="@color/colorAccent"
            app:backgroundTint="@color/colorPrimaryDark" />
        android:selectAllOnFocus="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:layout_marginBottom="24dp"
            android:text="to"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            app:backgroundTint="@color/colorSecondaryLight"/>

        <EditText
            android:id="@+id/attraction_time_end_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="31dp"
            android:layout_weight="0.33"
            android:hint="Time End"
            android:textColorHint="@color/colorAccent"
            app:backgroundTint="@color/colorPrimaryDark" />
        android:selectAllOnFocus="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/attraction_error_tv"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/attraction_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/attraction_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:enabled="true"
        android:text="Add Attraction"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>