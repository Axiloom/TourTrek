<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tour_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/edit_tour_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tour_cover_iv"
        app:layout_constraintVertical_bias="0.0">



        <LinearLayout
            android:id="@+id/edit_tour_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_tour_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_name"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_tour_name_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_tour_location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="@string/fragment_edit_tour_location"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_tour_location_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_tour_length_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_length"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_length_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_tour_startDate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_startDate_length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_startDate"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_startDate_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" dd-MM-yyyy"
                android:ems="10"
                android:inputType="date|datetime"
                android:paddingTop="20dp"
                android:textSize="30sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <Button
                android:id="@+id/edit_tour_add_attraction_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Attractions"
                android:textSize="30sp"/>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/current_tour_attractions_srl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/current_tour_attractions_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="invisible" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </FrameLayout>



        <LinearLayout
            android:id="@+id/edit_tour_checkboxes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/edit_tour_notifications_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fragment_edit_tour_notifications"
                android:textSize="30sp"/>


            <CheckBox
                android:id="@+id/edit_tour_public_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fragment_edit_tour_public"
                android:textSize="30sp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/edit_tour_error_tv"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/edit_tour_loading_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/edit_tour_save_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="30sp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>