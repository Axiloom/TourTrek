<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondaryLight"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/item_tour_bg">

        <ImageView
            android:id="@+id/edit_tour_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:background="@drawable/item_tour_bg_img"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_tour_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/edit_tour_picture_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:text="Edit Image"
                android:textColor="#FFFFFF"
                android:background="@drawable/item_tour_bg_img"
                android:textSize="20sp"
                android:gravity="left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


    <EditText
        android:id="@+id/edit_tour_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Tour Name"
        android:textColorHint="@color/colorAccent"
        android:textSize="50dp"
        android:textStyle="bold"
        android:inputType="text"
        android:selectAllOnFocus="true" />
    <!--in place of android:hint, prompt for actual name-->

    <EditText
        android:id="@+id/edit_tour_location_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="City, State"
        android:textColorHint="@color/colorAccent"
        app:backgroundTint="@color/colorSecondaryLight"
        android:selectAllOnFocus="true"/>
    <!--in place of android:hint, prompt for actual location-->

    <EditText
        android:id="@+id/edit_tour_cost_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Cost in $"
        android:textColorHint="@color/colorAccent"
        android:inputType="numberDecimal"
        app:backgroundTint="@color/colorSecondaryLight"
        android:selectAllOnFocus="true"/>
    <!--in place of android:hint, prompt for actual cost-->

    <EditText
        android:id="@+id/edit_tour_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Estimated Time"
        android:textColorHint="@color/colorAccent"
        android:inputType="time"
        app:backgroundTint="@color/colorSecondaryLight"
        android:selectAllOnFocus="true" />
    <!--in place of android:hint, prompt for actual time-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Attractions">
    </TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/attractions_loading_container"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/attractions_loading_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/attractions_loading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Loading Current Tours"
                android:textSize="25sp" />

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/attractions_srl"
            android:layout_width="match_parent"
            android:layout_height="286dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tour_attractions_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="1.0">

        <Button
            android:id="@+id/edit_tour_add_attraction_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_weight="0.33"
            android:background="@color/colorSecondary"
            android:enabled="true"
            android:text="Add Attraction"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
        <!--android:onClick="addAttractionFunction"-->

        <Button
            android:id="@+id/edit_tour_share_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:layout_weight="0.33"
            android:background="@color/colorPrimaryLight"
            android:enabled="true"
            android:text="Share Tour"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
        <!--android:onClick="shareTourFunction"-->

        <Button
            android:id="@+id/edit_tour_update_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:layout_weight=".33"
            android:background="@color/colorPrimaryDark"
            android:enabled="true"
            android:text="Update Tour"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
        <!--android:onClick="updateTourFunction"-->

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>