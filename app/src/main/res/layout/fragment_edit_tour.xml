<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tour_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/edit_tour_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tour_cover_iv"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/edit_tour_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_tour_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_name"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_tour_name_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_tour_location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_location"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_location_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_tour_length_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_length"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_length_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_tour_startDate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tour_startDate_length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_tour_startDate"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_tour_startDate_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date|datetime"
                android:paddingTop="20dp"
                android:textSize="30sp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/edit_tour_checkboxes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/edit_tour_notifications_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fragment_edit_tour_notifications"
                android:textSize="30sp"/>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fragment_edit_tour_public"
                android:textSize="30sp"/>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>